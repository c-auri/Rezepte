---
import { getCollection } from 'astro:content'
import Page from '../layouts/Page.astro'
const recipes = await getCollection('recipes')
---
<Page>
    <h1>Rezepte</h1>
    <ul>
        {
            recipes.map(recipe =>
            <li>
                <a href={"rezepte/" + recipe.slug}>{recipe.data.title}</a>
            </li>)
        }
    </ul>
</Page>